/* pages/affirm/affirm.wxss */
.container {
  display: flex;
  flex-direction: column;
}
.container .line-item {
  /* 订单详情 */
  flex: 1;
  width: 100%;
  overflow-y: auto;
}
.container .line-item .shopping-list {
  /* 购物清单 */
  display: flex;
  flex-direction: column;
}
.container .line-item .shopping-list .sl-title {
  font-size: 32rpx;
  color: #000000;
  padding: 24rpx 0 22rpx 38rpx;
}
.container .line-item .shopping-list .sl-item {
  background-color: #F7F7F7;
  display: flex;
  flex-direction: row;
  padding: 20rpx 30rpx;
  margin-bottom: 10rpx;
}
.container .line-item .shopping-list .sl-item .sl-item-img {
  width: 200rpx;
  height: 200rpx;
}
.container .line-item .shopping-list .sl-item .sl-item-info {
  flex: 1;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
}
.container .line-item .shopping-list .sl-item .sl-item-info .sl-item-name {
  font-size: 28rpx;
  color: #2D2D2D;
  line-height: 46rpx;
  max-height: 92rpx;
  overflow: hidden;
}
.container .line-item .shopping-list .sl-item .sl-item-info .sl-item-labels {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.container .line-item .shopping-list .sl-item .sl-item-info .sl-item-labels text {
  font-size: 20rpx;
  color: #FFFFFF;
  background: #FE4E4E;
  border-radius: 7rpx;
  padding: 0 10rpx;
  margin: 0 10rpx 10rpx 0;
}
.container .line-item .shopping-list .sl-item .sl-item-info .sl-item-price {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.container .line-item .shopping-list .sl-item .sl-item-info .sl-item-price .preferential-price {
  font-size: 20rpx;
  color: #EB0000;
}
.container .line-item .shopping-list .sl-item .sl-item-info .sl-item-price .preferential-price text {
  font-size: 28rpx;
}
.container .line-item .shopping-list .sl-item .sl-item-info .sl-item-price .sl-item-yj {
  font-size: 20rpx;
  color: #B8B8B8;
  margin-left: 27rpx;
}
.container .line-item .sl-item-choice {
  /* 选择 */
  padding: 0 30rpx;
}
.container .line-item .sl-item-choice .choice-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 23rpx 0;
  border-bottom: 1rpx solid #E7E7E7;
}
.container .line-item .sl-item-choice .choice-item view:nth-child(1) {
  font-size: 28rpx;
  color: #2D2D2D;
}
.container .line-item .sl-item-choice .choice-item .choice-item-msg {
  flex: 1;
  font-size: 24rpx;
  color: #8E8E8E;
  text-align: right;
  display: flex;
  flex-direction: column;
  margin-left: 110rpx;
}
.container .line-item .sl-item-choice .choice-item image {
  width: 12.5rpx;
  height: 25.5rpx;
  margin-left: 20rpx;
}
.container .line-item .price-calculation {
  padding: 0 30rpx;
  margin-top: 12rpx;
}
.container .line-item .price-calculation > view {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  text-align: right;
  font-size: 24rpx;
  color: #2D2D2D;
  line-height: 50rpx;
}
.container .line-item .price-calculation > view > view {
  font-size: 20rpx;
  color: #EB0000;
}
.container .line-item .price-calculation > view > view text {
  font-size: 28rpx;
}
.container .affirm-pay {
  /* 确认支付 */
  width: 100%;
  border-top: 1rpx solid #E7E7E7;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.container .affirm-pay .consent-agreement {
  flex: 1;
  font-size: 20rpx;
  color: #8E8E8E;
  padding-left: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.container .affirm-pay .consent-agreement image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 14rpx;
}
.container .affirm-pay .open-pay {
  width: 350rpx;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  font-size: 32rpx;
  color: #FFFFFF;
  background-color: #FE4E4E;
}
.container .shade {
  /*遮罩层*/
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100;
}
.container .shade .affirm-site-list {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
}
.container .shade .affirm-site-list .site-list-title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 30rpx;
}
.container .shade .affirm-site-list .site-list-title text:nth-child(1) {
  font-size: 32rpx;
  color: #2D2D2D;
}
.container .shade .affirm-site-list .site-list-title text:nth-child(2) {
  font-size: 28rpx;
  color: #FE4E4E;
}
.container .shade .affirm-site-list .site-list-info {
  max-height: 500rpx;
}
.container .shade .affirm-site-list .site-list-info .site-items {
  border-bottom: 1rpx solid #E7E7E7;
  padding: 30rpx 0;
  display: flex;
  flex-direction: column;
  margin: 0 30rpx;
}
.container .shade .affirm-site-list .site-list-info .site-items > view {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.container .shade .affirm-site-list .site-list-info .site-items > view > view {
  display: flex;
  flex-direction: column;
}
.container .shade .affirm-site-list .site-list-info .site-items > view image {
  width: 36rpx;
  height: 36rpx                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                           ;
}
.container .shade .affirm-site-list .site-list-info .site-items > view:nth-child(1) > view {
  flex: 1;
}
.container .shade .affirm-site-list .site-list-info .site-items > view:nth-child(1) > view > view {
  width: 100%;
  text-align: left;
  font-size: 28rpx;
  color: #2D2D2D;
}
.container .shade .affirm-site-list .site-list-info .site-items > view:nth-child(1) > view > view:nth-child(1) {
  line-height: 80rpx;
}
.container .shade .affirm-site-list .site-list-info .site-items > view:nth-child(1) > view > view:nth-child(2) {
  font-size: 24rpx;
}
.container .shade .affirm-site-list .site-list-info .site-items > view:nth-child(1) > view > view:nth-child(2) text {
  color: #FE4E4E;
}
.container .shade .affirm-site-list .site-list-info .site-items > view:nth-child(1) radio-group {
  margin-left: 60rpx;
}
.container .shade .affirm-site-list .site-list-info .site-items > view:nth-child(2) {
  padding-top: 14rpx;
}
.container .shade .affirm-site-list .site-list-info .site-items > view:nth-child(2) > view {
  border: 1rpx solid #E7E7E7;
  border-radius: 7rpx;
  font-size: 28rpx;
  color: #8E8E8E;
  padding: 5rpx 32rpx;
  margin-right: 20rpx;
}
.container .shade .affirm-site-list .address {
  height: 98rpx;
  line-height: 98rpx;
  font-size: 32rpx;
  color: #FFFFFF;
  background-color: #FE4E4E;
  text-align: center;
}
.container .shade .edit-address {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
}
.container .shade .edit-address .edit-address-title {
  font-size: 32rpx;
  color: #2D2D2D;
  padding: 32rpx 30rpx 24rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.container .shade .edit-address .edit-address-info {
  padding: 0 30rpx;
}
.container .shade .edit-address .edit-address-info .edit-address-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 22rpx 0;
  border-bottom: 1px solid #E7E7E7;
  font-size: 28rpx;
}
.container .shade .edit-address .edit-address-info .edit-address-item input,
.container .shade .edit-address .edit-address-info .edit-address-item view,
.container .shade .edit-address .edit-address-info .edit-address-item picker,
.container .shade .edit-address .edit-address-info .edit-address-item textarea {
  font-size: 28rpx;
  width: 100%;
}
.container .shade .edit-address .edit-address-info .edit-address-item textarea {
  width: 100%;
  min-height: 100rpx;
}
.container .shade .edit-address .edit-address-info .edit-address-item image {
  width: 12.5rpx;
  height: 25rpx;
}
.container .shade .edit-address .edit-address-save {
  font-size: 32rpx;
  color: #FFFFFF;
  background-color: #FE4E4E;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
}
.container .couponmodel {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 100;
  display: flex;
  flex-direction: column;
}
.container .couponmodel .item-null {
  flex: 1;
}
.container .couponmodel .coupon-mag {
  width: 100%;
  height: 50%;
  background: #fff;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.container .couponmodel .coupon-mag .coupon-msg-title {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0;
}
.container .couponmodel .coupon-mag .coupon-msg-title text {
  font-size: 32rpx;
  color: #2D2D2D;
}
.container .couponmodel .coupon-mag .coupon-list {
  flex: 1;
  padding: 0 40rpx ;
}
.container .couponmodel .coupon-mag .coupon-list .coupon-list-msg {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.container .couponmodel .coupon-mag .coupon-list .coupon-list-msg .coupon-list-item {
  width: 100%;
  padding: 10rpx 0;
  margin-bottom: 47rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.container .couponmodel .coupon-mag .coupon-list .coupon-list-msg .coupon-list-item .coupon-item-left {
  flex: 1;
}
.container .couponmodel .coupon-mag .coupon-list .coupon-list-msg .coupon-list-item .coupon-item-left .item-left-title {
  font-size: 32rpx;
  color: #FE4E4E;
  margin-bottom: 8rpx;
}
.container .couponmodel .coupon-mag .coupon-list .coupon-list-msg .coupon-list-item .coupon-item-left .item-left-msg text {
  display: block;
  font-size: 28rpx;
  color: #8E8E8E;
}
.container .couponmodel .coupon-mag .coupon-list .coupon-list-msg .coupon-list-item .coupon-item-right image {
  width: 36rpx;
  height: 36rpx;
}
.container .couponmodel .coupon-mag .coupon-msg-btn button {
  background: #FE4E4E;
  color: #fff;
  font-size: 28rpx;
  border-radius: 0;
  line-height: 90rpx;
}
