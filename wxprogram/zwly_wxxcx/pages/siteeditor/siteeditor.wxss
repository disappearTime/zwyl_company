.container {
  display: flex;
  flex-direction: column;
}
.container .siteeditor-info {
  flex: 1;
  width: 100%;
  box-sizing: border-box;
  overflow-y: auto;
  padding: 0 30rpx;
}
.container .siteeditor-info .siteeditor-item {
  padding: 23rpx 0;
  border-bottom: 1rpx solid #f7f7f7;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
}
.container .siteeditor-info .siteeditor-item input{
  width: 100%;
}
.container .siteeditor-info .siteeditor-item picker{
  flex: 1;
}
.container .siteeditor-info .siteeditor-item  view,.container .siteeditor-info .siteeditor-item  text{
  font-size: 28rpx;
}
.container .siteeditor-info .siteeditor-item .fx {
  width: 12.5rpx;
  height: 25.5rpx;
}
.container .siteeditor-info .siteeditor-item .xz{
  width: 36rpx;
  height: 36rpx;
  margin-right: 14rpx;
}
.container .siteeditor-info .siteeditor-item textarea {
  height: 100rpx;
}
.container .siteeditor-info .siteeditor-item:nth-child(5) {
  border: 0;
  justify-content: flex-start;
}
.container .siteeditor-save {
  width: 100%;
  font-size: 32rpx;
  color: #fff;
  background-color: #FE4E4E;
  text-align: center;
  height: 98rpx;
  line-height: 98rpx;
}
