.container {
  display: flex;
  flex-direction: column;
  background-color: #F7F7F7;
}
.container .logistics-title {
  width: 100%;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  padding: 30rpx;
  margin-top: 1rpx;
  background-color: #fff;
}
.container .logistics-title .log-tit-img {
  position: relative;
}
.container .logistics-title .log-tit-img image {
  width: 120rpx;
  height: 120rpx;
}
.container .logistics-title .log-tit-img text {
  position: absolute;
  bottom: 0;
  left: 0;
  display: block;
  width: 100%;
  text-align: center;
  font-size: 20rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.6);
}
.container .logistics-title .log-tit-msg {
  flex: 1;
  margin-left: 30rpx;
}
.container .logistics-title .log-tit-msg .log-tit-msg-items {
  font-size: 28rpx;
  line-height: 50rpx;
  color: #000000;
}
.container .logistics-title .log-tit-msg .log-tit-msg-items text {
  font-size: 28rpx;
  line-height: 50rpx;
  color: #2D2D2D;
}
.container .logistics-info {
  flex: 1;
  width: 100%;
  background-color: #fff;
  margin-top: 10rpx;
  box-sizing: border-box;
  padding: 26rpx 30rpx 0;
  overflow: hidden;
}
.container .logistics-info .logistics-info-msg {
  width: 100%;
  height: 100%;
}
.container .logistics-info .logistics-info-msg .log-info-items {
  width: 100%;
  display: flex;
  flex-direction: row;
}
.container .logistics-info .logistics-info-msg .log-info-items .info-items-left {
  margin-right: 30rpx;
  display: flex;
  flex-direction: column;
}
.container .logistics-info .logistics-info-msg .log-info-items .info-items-left .dian {
  width: 36rpx;
  height: 36rpx;
}
.container .logistics-info .logistics-info-msg .log-info-items .info-items-left .info-items-sx {
  flex: 1;
  display: flex;
  flex-direction: row;
}
.container .logistics-info .logistics-info-msg .log-info-items .info-items-left .info-items-sx view {
  flex: 1;
  border-right: 1rpx solid #E7E7E7;
}
.container .logistics-info .logistics-info-msg .log-info-items .info-items-left .info-items-sx view:nth-child(2) {
  border: none;
}
.container .logistics-info .logistics-info-msg .log-info-items .info-items-right {
  line-height: 40rpx;
  color: #8E8E8E;
  padding-bottom: 42rpx;
}
.container .logistics-info .logistics-info-msg .log-info-items .info-items-right .info-items-msg {
  font-size: 28rpx;
}
.container .logistics-info .logistics-info-msg .log-info-items .info-items-right .info-items-time {
  font-size: 20rpx;
}
.container .logistics-info .logistics-info-msg .log-info-items:nth-child(1) .info-items-right {
  color: #FE4E4E;
}
.container .logistics-info .logistics-info-msg .log-info-items:last-child .info-items-left .info-items-sx view {
  border: none;
}
.container .logistics-info .logistics-info-msg .logistics-null {
  padding-top: 100rpx;
}
.container .logistics-info .logistics-info-msg .logistics-null image {
  width: 300rpx;
  height: 300rpx;
  margin: 0 auto;
}
.container .logistics-info .logistics-info-msg .logistics-null text {
  display: block;
  text-align: center;
  margin-top: 20rpx;
}
