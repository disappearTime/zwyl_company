/* pages/cart/cart.wxss */
.container{
    display: flex;
    flex-direction: column;

}
/*空购物车*/
.cart-null{
    flex: 1;
    width: 100%;
    text-align: center;
    padding-top: 110rpx;
}
.cart-null image{
    width: 320rpx;
    height: 320rpx;
    margin: 0 auto;
}
.cart-null text{
    display: block;
    color: #666666;
    margin-top: 30rpx;
}
/* 购物车列表 */
.cart-list{
    flex: 1;
    width: 100%;
    box-sizing: border-box;
    padding: 0 30rpx;
    overflow-y: auto;
}
.cart-list .cart-items{
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 30rpx 0;
    border-bottom: 1px solid #E7E7E7;
}
.cart-list .cart-items .cart-items-start{
    width: 36rpx;
    height: 36rpx;
    margin-right: 14rpx;
}
.cart-list .cart-items .cart-items-img{
    width: 200rpx;
    height: 200rpx;
}
.cart-list .cart-items .cart-items-info{
    flex: 1;
    height: 200rpx;
    margin-left: 28rpx;
    display: flex;
    flex-direction: column;
}
.cart-list .cart-items .cart-items-info .cart-items-name{
    font-size: 28rpx;
    color: #2D2D2D;
    height: 92rpx;
    line-height: 46rpx;
    max-height: 92rpx;
    overflow: hidden;
}
.cart-list .cart-items .cart-items-info .cart-items-label{
    flex: 1;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.cart-list .cart-items .cart-items-info .cart-items-label text{
    font-size: 20rpx;
color: #FFFFFF;
background: #FE4E4E;
border-radius: 7rpx;
padding: 0 10rpx;
margin:0 10rpx 10rpx 0;
}
.cart-list .cart-items .cart-items-info  .cart-items-priinfo{
    display: flex;
    flex-direction: row;
    align-items: center;
}
.cart-list .cart-items .cart-items-info  .cart-items-priinfo .citem-price{
    font-size: 20rpx;
    color: #EB0000;
}
.cart-list .cart-items .cart-items-info  .cart-items-priinfo .citem-price text{
    font-size: 28rpx;
    line-height: 28rpx;
}
.cart-list .cart-items .cart-items-info  .cart-items-priinfo .citem-discounts{
    flex: 1; 
    font-size: 20rpx;
    color: #B8B8B8;
    margin-left: 27rpx;
}
.cart-list .cart-items .cart-items-info  .cart-items-priinfo .citem-number{
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 38rpx;
    overflow: hidden;

}
.cart-list .cart-items .cart-items-info  .cart-items-priinfo .citem-number text{
    display: inline-block;
    width: 38rpx;
    height: 38rpx;
    text-align: center;
    background: #F7F7F7;
}
.cart-list .cart-items .cart-items-info  .cart-items-priinfo .citem-number view{
    width: 48rpx;
    min-height: 38rpx;
    font-size: 28rpx;
    color: #2D2D2D;
    text-align: center;
    background: #EFEFEF;
}
/* 购物车底部 */
.cart-feature{
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    border-top: 1px solid #E7E7E7;
}
/* 编辑 */
.cart-feature .cart-complie{
    display: flex;
    flex-direction: row;
    padding-left:30rpx; 
    align-items: center;
}
.cart-feature .cart-complie image{
    width: 36rpx;
    height: 36rpx;
}
.cart-feature .cart-complie view{
    font-size: 28rpx;
    color: #2D2D2D;
    line-height: 48rpx;
    margin: 0 30rpx 0 15rpx;
}
.cart-feature .cart-complie .cart-allsel{

}
.cart-feature .cart-complie .cart-delete{
    
}
/* 合计金额 */
.cart-feature .cart-price-info{
    flex: 1;
    display: flex;
    flex-direction: column;
    text-align: right;
    padding-right: 20rpx;
}
.cart-feature .cart-price-info .cart-total{
    font-size: 24rpx;
    color: #2D2D2D;
}
.cart-feature .cart-price-info .cart-total view{
    display: inline-block;
    font-size: 20rpx;
    color: #EB0000;
}
.cart-feature .cart-price-info .cart-total view text{
    font-size: 28rpx;
    line-height: 28rpx;
}
.cart-feature .cart-price-info .cart-discounts{
    font-size: 20rpx;
    color: #8E8E8E;
}
/* 结算 */
.cart-feature .cart-closing{
    width: 210rpx;
    height: 98rpx;
    line-height: 98rpx;
    background-color: #666666;
    /* background: #FE4E4E; */
    text-align: center;
    font-size: 28rpx;
    color: #FFFFFF;
}
.cart-feature .cart-closing.act{
    background: #FE4E4E;    
}