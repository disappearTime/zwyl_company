.container {
  background-color: #F7F7F7;
  display: flex;
  flex-direction: column;
}
.container .order-select {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center;
  background-color: #FFF;
}
.container .order-select .order-sitems {
  flex: 1;
  color: #2D2D2D;
  position: relative;
}
.container .order-select .order-sitems text {
  display: inline-block;
  font-size: 28rpx;
  padding: 20rpx 22rpx;
}
.container .order-select .order-sitems .order-select-znum {
  width: 17rpx;
  height: 17rpx;
  position: absolute;
  top: 20rpx;
  right: 24rpx;
  font-size: 16rpx;
  color: #FFF;
  background: #EB0000;
  border-radius: 50%;
}
.container .order-select .order-sitems.active text {
  border-bottom: 4rpx solid #FE4E4E;
}
.container .order-list {
  flex: 1;
  width: 100%;
  overflow-y: auto;
  padding-top: 10rpx;
}
.container .order-list .order-litems {
  margin-top: 20rpx;
}
.container .order-list .order-litems .order-litems-title {
  background: #FFF;
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.container .order-list .order-litems .order-litems-title .order-mark {
  font-size: 24rpx;
  color: #2D2D2D;
}
.container .order-list .order-litems .order-litems-title .order-zstate {
  display: flex;
  flex-direction: row;
}
.container .order-list .order-litems .order-litems-title .order-zstate view {
  padding: 0 15rpx ;
}
.container .order-list .order-litems .order-litems-title .order-zstate .order-date {
  font-size: 20rpx;
  color: #8E8E8E;
  border-right: 1rpx solid #F7F7F7;
}
.container .order-list .order-litems .order-litems-title .order-zstate .order-srate {
  font-size: 20rpx;
  color: #FE4E4E;
}
.container .order-list .order-litems .order-litems-goods .litems-goods-items {
  padding: 20rpx 30rpx;
  border-bottom: 6rpx solid #FFF;
  display: flex;
  flex-direction: row;
}
.container .order-list .order-litems .order-litems-goods .litems-goods-items > image {
  width: 150rpx;
  height: 150rpx;
}
.container .order-list .order-litems .order-litems-goods .litems-goods-items .goods-items-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 0 30rpx;
}
.container .order-list .order-litems .order-litems-goods .litems-goods-items .goods-items-info .goods-items-name {
  font-size: 28rpx;
  color: #2D2D2D;
  line-height: 46rpx;
  margin-bottom: 22rpx;
}
.container .order-list .order-litems .order-litems-goods .litems-goods-items .goods-items-info .goods-items-label {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.container .order-list .order-litems .order-litems-goods .litems-goods-items .goods-items-info .goods-items-label text {
  display: inline-block;
  padding: 0 10rpx;
  background: #FE4E4E;
  border-radius: 7rpx;
  font-size: 20rpx;
  color: #fff;
  margin-right: 10rpx;
}
.container .order-list .order-litems .order-litems-goods .litems-goods-items .goods-items-data {
  text-align: right;
}
.container .order-list .order-litems .order-litems-goods .litems-goods-items .goods-items-data .goods-items-price {
  font-size: 20rpx;
  color: #2D2D2D;
  margin-bottom: 10rpx;
  line-height: 46rpx;
}
.container .order-list .order-litems .order-litems-goods .litems-goods-items .goods-items-data .goods-items-price text {
  font-size: 28rpx;
  line-height: 28rpx;
  display: inline-block;
}
.container .order-list .order-litems .order-litems-goods .litems-goods-items .goods-items-data .goods-items-num {
  font-size: 20rpx;
  color: #B8B8B8;
}
.container .order-list .order-litems .order-litems-footer {
  background: #fff;
  text-align: right;
}
.container .order-list .order-litems .order-litems-footer > view {
  padding: 18rpx 30rpx;
}
.container .order-list .order-litems .order-litems-footer .order-litems-zj {
  font-size: 20rpx;
  color: #2D2D2D;
  border-bottom: 1rpx solid #F7F7F7;
}
.container .order-list .order-litems .order-litems-footer .order-litems-zj text {
  font-size: 24rpx;
  color: #FE4E4E;
  line-height: 28rpx;
}
.container .order-list .order-litems .order-litems-footer .order-litems-function {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
.container .order-list .order-litems .order-litems-footer .order-litems-function view {
  padding: 8rpx 22rpx;
  border: 1rpx solid #E7E7E7;
  margin-right: 20rpx;
  border-radius: 8rpx;
}
.container .order-list .order-list-null{
  width: 100%;
  height: 100%;
}
.container .order-list .order-list-null image{
  width: 300rpx;
  height: 300rpx;
  margin: 0 auto;
  margin-top: 100rpx;
}
.container .order-list .order-list-null text{
  display: block;
  text-align: center;
  margin-top: 20rpx;
}
