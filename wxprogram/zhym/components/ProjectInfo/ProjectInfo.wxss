.order_container{
  height: 260rpx;
  width: 100%;
  padding: 32rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.order_left{
  width: 200rpx;
  height: 100%;
  margin-right: 32rpx;
  flex-grow: 0;
  flex-shrink: 0;
  position: relative;
}
.project_image{
  width: 100%;
  height: 100%;
}
.order_right{
  height: 100%;
  flex-shrink: 1;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.title{
  font-family: 'PingFangSC-Regular';
  font-size: 32rpx;
  color: #222222;
  line-height: 32rpx;
  display: block;
}
.project_intro{
  font-family: 'PingFangSC-Regular';
  font-size: 28rpx;
  color: #979797;
  line-height: 32rpx;
}
.activity_status{
  font-size: 28rpx;
  color: #FF6600
}
.order_price{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.price_info{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.pay_price{
  font-family: 'PingFangSC-Medium';
  font-size: 36rpx;
  color: #FF5353;
  line-height: 36rpx;
}
.origin_price{
  font-family: 'PingFangSC-Regular';
  font-size: 24rpx;
  color: #979797;
  line-height: 24px;
  text-decoration: line-through;
}
.shop_cart{
  width: 60rpx;
  height: 60rpx;
}