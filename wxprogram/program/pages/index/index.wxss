/**index.wxss**/
.search-box{
  padding: 15rpx 20rpx;
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  z-index: 100;
  top: 0;
  left: 0;
  background: #ffffff;
}
.search{
  width: 100%;
  height: 100%;
  padding: 0 18rpx;
  box-sizing: border-box;
  border-radius: 25rpx;
  background-color: #ccc;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #333;
}
.search image{
  width: 40rpx;
  height: 40rpx;
}

.banner{
  width: 100%;
  height: 480rpx;
}
swiper{
  width: 100%;
  height: 100%;
}
swiper image{
  width: 100%;
}
.goods-area{
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
}
.area-title{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  color: 28rpx;
}
.area-title image{
  width: 30rpx;
  height: 30rpx;
}
.goods-detail{
  width: 100%;
  height: 300rpx;
  border-radius: 4rpx;
  box-shadow: 1px 2px 15px 0 rgba(0, 0, 0, 0.4);
}
.scroll-view{
  overflow: auto;
  -webkit-overflow-scrolling : touch;/* 解决ios手机滚动卡顿 */
  height: 1740rpx;
}